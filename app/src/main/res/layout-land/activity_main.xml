<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_1rm"

        android:text="@string/btn_1rm"
        android:textColor="#FFFFFF"
        android:textSize="32sp"

        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape_red"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:layout_above="@+id/btn_bmr"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <Button android:id="@+id/btn_bmr"

        android:text="@string/btn_bmr"
        android:textColor="#FFFFFF"
        android:textSize="26sp"

        android:layout_width="295dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape_yellow"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_alignTop="@+id/btn_mhr"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btn_mhr"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/btn_bmi"

        android:text="@string/btn_bmi"
        android:textColor="#FFFFFF"
        android:textSize="32sp"

        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape_blue"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_toEndOf="@+id/btn_1rm"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btn_bmr"
        android:layout_alignStart="@+id/btn_bmr" />
    <Button
        android:id="@+id/btn_mhr"

        android:text="@string/btn_mhr"
        android:textColor="#FFFFFF"
        android:textSize="26sp"

        android:layout_width="295dp"
        android:layout_height="160dp"
        android:background="@drawable/buttonshape_green"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
